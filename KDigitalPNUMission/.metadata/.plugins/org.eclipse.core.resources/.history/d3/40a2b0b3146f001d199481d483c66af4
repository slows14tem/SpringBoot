package edu.pnu.logdao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;

import org.springframework.stereotype.Repository;

@Repository
public class LogDAOH2 implements LogDAO{
	
	private Connection con = null;
	
	public LogDAOH2() {
		try {
			Class.forName("org.h2.Driver");
			con = DriverManager.getConnection("jdbc:h2:tcp://localhost/~/mvcboard", "sa", "");
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	@Override
	public void addlog(String method, String sql, boolean success) {
		PreparedStatement pt = null;
		String sqlString = "insert into dblog(method, sqlstring, success) values(?,?,?)";
		try {
			pt = con.prepareStatement(sqlString);
			pt.setString(1, method);
			pt.setString(2, sql);
			pt.setBoolean(3, success);
			pt.executeUpdate();
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			try {
				pt.close();
			} catch (Exception e) {
				e.printStackTrace();
			}
		}
		
		
		
	}
	

}
