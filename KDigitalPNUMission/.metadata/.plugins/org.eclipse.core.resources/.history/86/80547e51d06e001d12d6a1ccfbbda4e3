package com.pnu.dao;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;
import java.util.List;

import com.pnu.domain.BoardVO;

public class BoardDAO {
	private Connection con = null;
	
	public BoardDAO() {
		try {
			Class.forName("org.h2.Driver");
			con = DriverManager.getConnection("jdbc:h2:tcp://localhost/~/mvcboard", "sa", "");
		} catch (Exception e) {
			e.printStackTrace();
		}
		
	}
	
	public List<BoardVO> getBoards() throws Exception{
		Statement st = null;
		ResultSet rs = null;
		String sql = "select * from board";
		List<BoardVO> list = new ArrayList<>();
		try {
			st = con.createStatement();
			rs = st.executeQuery(sql);
			while(rs.next()) {
				BoardVO bv = new BoardVO();
				bv.setSeq(rs.getInt("seq"));
				bv.setTitle(rs.getString("title"));
				bv.setWriter(rs.getString("writer"));
				bv.setContent(rs.getString("content"));
				bv.setCreateDate(rs.getDate("createDate"));
				bv.setCnt(rs.getInt("cnt"));
				list.add(bv);
			}
			return list;
		} catch (Exception e) {
			e.printStackTrace();
		}
		rs.close();
		st.close();
		return null;
	}
	
	public BoardVO getBoard(int sep) {
		PreparedStatement pt = null;
		ResultSet rs = null;
		String sql = "select * from board where id = ?";
		try {
			pt = con.prepareStatement(sql);
			pt.setInt(1, sep);
			rs = pt.executeQuery();
			rs.next();
			BoardVO bv = new BoardVO();
			bv.setSeq(rs.getInt("seq"));
			bv.setTitle(rs.getString("title"));
			bv.setWriter(rs.getString("writer"));
			bv.setContent(rs.getString("content"));
			bv.setCreateDate(rs.getDate("createDate"));
			bv.setCnt(rs.getInt("cnt"));
			return bv;
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			try {
				rs.close();
				pt.close();
			} catch (SQLException e) {
				e.printStackTrace();
			}
		}
		

		return null;
		
	}
	
	public BoardVO addBoard(BoardVO boardVO) {
		PreparedStatement pt = null;
		ResultSet rs = null;
		String sql = "insert into board(title, writer, content, cnt) values(?, ?, ?, ?)";
		try {
			pt = con.prepareStatement(sql);
			pt.setString(1, boardVO.getTitle());
			pt.setString(2, boardVO.getWriter());
			pt.setString(1, boardVO.get());
			pt.setString(1, boardVO.getTitle());
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		return boardVO;
		
	}
	
	public BoardVO updateBoard(BoardVO boardVO) {
		return boardVO;
		
	}
	
	public BoardVO deleteBoard(int seq) {
		return null;
		
	}

}
