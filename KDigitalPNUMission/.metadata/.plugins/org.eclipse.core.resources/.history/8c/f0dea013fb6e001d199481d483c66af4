package com.pnu.service;

import java.util.List;

import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;

import com.pnu.dao.BoardDAO;
import com.pnu.domain.BoardVO;

public class BoardService {
	
	BoardDAO dao = new BoardDAO();
	
	public List<BoardVO> getBoards(){
		return dao.getBoards();
	}
	
	public BoardVO getBoard(@PathVariable Integer seq) {
		return dao.getBoard(seq);
		
	}
	
	public BoardVO addBoard(BoardVO boardVO) {
		return dao.addBoard(boardVO);
		
	}
	
	public BoardVO updateBoard(BoardVO boardVO) {
		return dao.updateBoard(boardVO);
		
	}
	
	public int deleteBoard(@PathVariable Integer seq) {
		return dao.deleteBoard(seq);
		
	}

}
