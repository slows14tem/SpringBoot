package com.pnu.service;

import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.pnu.dao.BoardDAO;
import com.pnu.dao.BoardDAOH2;
import com.pnu.domain.BoardVO;

import edu.pnu.logdao.LogDAO;
import edu.pnu.logdao.LogDAOH2;

@Service
public class BoardService {
	
	@Autowired
	private BoardDAO dao;
	@Autowired
	private LogDAO log;
	
	public List<BoardVO> getBoards(){
		Map<String, Object> map = dao.getBoards();
		List<BoardVO> list = (List<BoardVO>) map.get("data");
		if (list != null) log.addlog("Get", (String) map.get("sql"), true);
		else 			  log.addlog("Get", (String) map.get("sql"), false);
		return list;
	}
	
	public BoardVO getBoard(int seq) {
		Map<String, Object> map = dao.getBoard(seq);
		BoardVO boardVO = (BoardVO) map.get("data");
		if (boardVO != null) log.addlog("Get", (String) map.get("sql"), true);
		else 			  	 log.addlog("Get", (String) map.get("sql"), false);
		return boardVO;	
	}
	
	public BoardVO addBoard(BoardVO boardVO) {
		Map<String, Object> map = dao.addBoard(boardVO);
		BoardVO addboard = (BoardVO) map.get("data");
		if (addboard != null) log.addlog("Post", (String) map.get("sql"), true);
		else 			  	  log.addlog("Post", (String) map.get("sql"), false);
		return addboard;
	}
	
	public BoardVO updateBoard(BoardVO boardVO) {
		Map<String, Object> map = dao.updateBoard(boardVO);
		BoardVO upboard = (BoardVO) map.get("data");
		if (upboard != null) log.addlog("Put", (String) map.get("sql"), true);
		else 			  	 log.addlog("Put", (String) map.get("sql"), false);
		return upboard;
	}
	
	public BoardVO deleteBoard(int seq) {
		Map<String, Object> map = dao.deleteBoard(seq);
		BoardVO delboard = (BoardVO) map.get("data");
		if (delboard != null) log.addlog("Delete", (String) map.get("sql"), true);
		else 			  	  log.addlog("Delete", (String) map.get("sql"), false);
		return delboard;
	}

}
